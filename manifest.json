{
  "manifest_version": 3,
  "name": "DocWeaver",
  "version": "1.0.0",
  "description": "Seamlessly weave technical documentation into beautiful PDFs",
  "action": { 
    "default_popup": "popup/popup.html",
    "default_title": "DocWeaver Collection"
  },
  "background": { 
    "service_worker": "background/service-worker.js" 
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "icons": { 
    "16": "assets/icons/icon.svg", 
    "48": "assets/icons/icon.svg", 
    "128": "assets/icons/icon.svg" 
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/webextension-polyfill.js", "content/selector.js", "content/content-script.js"],
    "css": ["ui/fab.css", "ui/overlay.css"]
  }],
  "web_accessible_resources": [{
    "resources": [
      "lib/*", "ui/*", "sidebar/*", "print/*", "assets/*"
    ], 
    "matches": ["<all_urls>"]
  }],
  "browser_specific_settings": {
    "gecko": { 
      "id": "docweaver@yourdomain", 
      "strict_min_version": "109.0" 
    }
  }
}
